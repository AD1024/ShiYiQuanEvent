<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5sp">

        <TextView
            android:id="@+id/event_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EventName"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingTop="4sp">

            <TextView
                android:id="@+id/event_list_item_sponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sponser" />

            <TextView
                android:id="@+id/event_list_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:text="DateHere" />

            <TextView
                android:id="@+id/event_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:text="TimeHere" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_on_black_18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点:" />

            <TextView
                android:id="@+id/event_list_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LocationHere" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_pink_500_18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动时长:" />

            <TextView
                android:id="@+id/event_list_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DurationHere" />

            <!--<TextView-->
            <!--android:id="@+id/event_list_item_end_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingLeft="5sp"-->
            <!--android:text="EndTimeHere" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_follower" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注人数:" />

            <TextView
                android:id="@+id/event_list_item_follower"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Followers" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:paddingEnd="10sp"
                android:paddingRight="20sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏该活动:" />

                <ImageView
                    android:id="@+id/event_list_item_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite_border" />

            </LinearLayout>

        </LinearLayout>

        <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--android:id="@+id/event_list_item_avatar"-->
        <!--android:layout_width="64px"-->
        <!--android:layout_height="64px"-->
        <!--fresco:fadeDuration="300" />-->

    </LinearLayout>

</LinearLayout>
